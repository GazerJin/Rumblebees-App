<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CombatFragment">



    <RelativeLayout
        android:id="@+id/relativelayout_combat1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-194dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="169dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="16dp"
            android:hint="Select Bee"
            app:boxBackgroundMode="none">

            <AutoCompleteTextView
                android:id="@+id/dropdown_menu"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:popupBackground="@drawable/rounded_corner"
                android:clickable="true"
                android:inputType="none"
                android:drawableRight="@drawable/baseline_arrow_drop_down_24"
                android:drawablePadding="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/white"
                android:dropDownAnchor="@id/dropdown_menu"
                android:dropDownVerticalOffset="0dp"/>


        </com.google.android.material.textfield.TextInputLayout>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>