<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Van_Dyke"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:contentDescription="Back button"
            android:padding="8dp"
            app:tint="@color/white" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Card Image -->
    <ImageView
        android:id="@+id/Card_pic_info"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/card1"
        android:layout_gravity="center" />

    <!-- RelativeLayout for Name and Description -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Van_Dyke"
        android:padding="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <!-- Card Name -->
        <TextView
            android:id="@+id/Card_Name_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Card Name"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp" />

        <!-- Card Description -->
        <TextView
            android:id="@+id/Card_Description_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Card_Name_info"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:text="This is a description"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp" />
    </RelativeLayout>

</LinearLayout>
